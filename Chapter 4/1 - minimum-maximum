#include <iostream>
#include <cmath>
#include <iomanip>
#include <cstdlib> //for rand and srand
#include <ctime> //time function
using namespace std;

int main()
{
    //4.1 - Minimum/Maximum - Coded by Quanysha Jones
    //write a program that asks the user to enter two numbers. 
    //the program should use the conditional operator to determine which number is the 
    //smaller number and which is the larger
    
    int Num1, Num2, SmallerNum, LargerNum;
    
    cout << "Enter two numbers and this program will determine which value is the smaller of the two: ";
    cin >> Num1 >> Num2; 
    
    SmallerNum = (Num1 > Num2) ? Num2 : Num1; //if num1 is greater than number 2 then Number 2 is smaller else number 1 is.
    LargerNum = (Num1 > Num2) ? Num1 : Num2; // opposite
    cout << "The Smaller Number of the two is " << SmallerNum << endl;
    cout << "The Larger Number of the two is " << LargerNum << endl;
    
    return 0;
}
    
