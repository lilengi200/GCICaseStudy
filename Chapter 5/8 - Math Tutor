                    cin >> Number1 >> Number2; 
                    SubAnswer  = Number1 - Number2;
                    cout << "Press ENTER to see the answer" << endl;
                    cin.get();
                    cout << " " << Number1 << endl;
                    cout << " -" << Number2 << endl;
                    cout << "---------" << endl;
                    cout << SubAnswer << endl;
                    break;
                    
            case 3: cout << "Enter two numbers you want to multiply together" << endl;
                    cin >> Number1 >> Number2; 
                    MultAnswer  = Number1 * Number2;
                    cout << "Press ENTER to see the answer" << endl;
                    cin.get();
                    cout << " " << Number1 << endl;
                    cout << " *" << Number2 << endl;
                    cout << "---------" << endl;
                    cout << MultAnswer << endl;
                    break;
                    
            case 4: cout << "Enter two numbers you want to preform division on: " << endl;
                    cin >> Number1 >> Number2; 
                    DiviAnswer  = Number1 / Number2;
                    cout << "Press ENTER to see the answer" << endl;
                    cin.get();
                    cout << " " << Number1 << endl;
                    cout << " /" << Number2 << endl;
                    cout << "---------" << endl;
                    cout << DiviAnswer << endl;
                    break;
                    
            case 5: cout << "Program has ended" << endl;
                    break;
        }
        
    }while (Option != 5);
    
    return 0;  
