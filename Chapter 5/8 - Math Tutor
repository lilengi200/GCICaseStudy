    double Number1, Number2, AddAnswer, DiviAnswer, MultAnswer, SubAnswer;
    int Option;
    
    do
    {
        cout << "I'm your Math Tutor here to help you." << endl;
        cout << "Select a number of the type of problem you're needing help solving" << endl;
